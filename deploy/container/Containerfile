FROM alpine:latest

RUN apk --no-cache add \
  bash \
  curl \
  gnupg

# Create the /app directory
RUN mkdir /app

# Set the working directory to /app
WORKDIR /app

# Copy the contents of the local /src folder to the current working directory (/app) in the container
COPY /src .

# Import the GPG public key
RUN gpg --import /app/public.key

CMD ["/bin/bash"]
