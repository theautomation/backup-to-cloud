FROM alpine:latest

ARG gpg_pub_key_filename=backup-to-cloud_publickey.key

RUN apk --no-cache add \
  bash \
  curl \
  gnupg

# Create the /app directory
RUN mkdir /app

# Set the working directory to /app
WORKDIR /app

# Copy the contents of the local /src folder to the current working directory (/app) in the container
COPY /src .

# Import the GPG public key
RUN gpg --import /app/$gpg_pub_key_filename

CMD ["/bin/bash"]
